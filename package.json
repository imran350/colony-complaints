{
  "name": "colony-complaints",
  "version": "1.1.0",
  "description": "Complaint Management System for Colony/Residential Community",
  "main": "electron-main.js",
  "author": "CityServices",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-start": "npm start & electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-win-portable": "electron-builder --win portable",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win便携版"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "puppeteer": "^24.37.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.cityservices.colony-complaints",
    "productName": "Colony Complaints",
    "copyright": "Copyright © 2026 CityServices",
    "directories": {
      "output": "build-output"
    },
    "files": [
      "public/**/*",
      "server.js",
      "electron-main.js",
      "preload.js",
      "complaints.db",
      "icon.ico",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "./complaints.db",
        "to": "complaints.db"
      }
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Colony Complaints"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  }
}
